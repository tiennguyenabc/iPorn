{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2020",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/type": [
        "type.ts"
      ],
      "@/db/models/*": [
        "db/models/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/base/*": [
        "base/*"
      ]
    },
    "baseUrl": "main"
  },
  "exclude": [
    "node_modules"
  ]
}